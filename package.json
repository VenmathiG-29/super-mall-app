
{
  "name": "supermall-web",
  "version": "1.0.0",
  "description": "SuperMall e-commerce platform frontend and backend",
  "main": "src/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "lint": "eslint ./src --ext .js,.jsx",
    "lint:fix": "eslint ./src --fix",
    "deploy": "firebase deploy",
    "emulate": "firebase emulators:start",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "firebase": "^10.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.0",
    "axios": "^1.4.0",
    "fuse.js": "^6.6.2",
    "jwt-decode": "^3.1.2",
    "web-vitals": "^3.1.1"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "eslint": "^8.46.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-react": "^7.42.1",
    "eslint-plugin-import": "^2.29.7",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "prettier": "^3.0.0",
    "husky": "^8.0.4",
    "lint-staged": "^14.0.0",
    "cypress": "^13.4.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.jsx": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "engines": {
    "node": ">=18.14.2"
  },
  "license": "MIT"
}
